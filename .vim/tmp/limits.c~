#include <stdio.h>
#include <sys/resource.h>

int main() {
    struct rlimit lim;
    getrlimit(RLIMIT_DATA,&lim);
    printf("stack size: %ld\n",(long)lim.rlim_max );
    printf("process limit: %ld\n", (long)lim.rlim_max);
    getrlimit(RLIMIT_CORE,&lim);
    printf("max file descriptors: %ld\n", (long)lim.rlim_max);
    return 0;
}
